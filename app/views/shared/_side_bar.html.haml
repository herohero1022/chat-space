.content__side
  .side__header
    .side__header__box
      %p.side__header__box--name 
        = current_user.name
      %ul.side__header__box--manu
        %li.side__header__box--menu__new-group
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.side__header__box--menu__edit-user
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog
  .side__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
          %p.group__message 
            まだメッセージがありません